$.fn.select2.defaults.set("theme", "bootstrap4")

#API_HOST = "https://wikirate.org"
API_HOST = "data"
METRIC_URL = "#{API_HOST}/Metric.json"
TOPIC_URL = "#{API_HOST}/topic.json"

topicGraph = null
editor = null

EdgeFormula =
  simple: 1
  topic_count : 2
  bookmarks: 3

NodeFormula =
  metrics: 1
  bookmarks: 2

configs = {
  default:
    font_size: 20
    node_size: 1
    edge_size: 1
    edge_formula: EdgeFormula.topic_count
    node_formula: NodeFormula.metrics
    edge_threshold: 2
    node_threshold: 2
    colorful: false
  solar:
    font_size: 20
    node_size: 1
    edge_size: 1
    edge_formula: EdgeFormula.topic_count
    node_formula: NodeFormula.metrics
    edge_threshold: 2
    node_threshold: 130
    colorful: false
  chaos:
    font_size: 20
    node_size: 1
    edge_size: 1
    edge_formula: EdgeFormula.simple
    node_formula: NodeFormula.metrics
    edge_threshold: 1
    node_threshold: 1
    colorful: true
  elite_connections:
    font_size: 20
    node_size: 1
