%header
  #navbarHeader.collapse.red-bg
    .container
      .row.red-bg
        .col-sm-8.col-md-7.py-4
          %h4.text-white
            = t('learn_more')
          %ul.list-unstyled

        .col-sm-4.offset-md-1.py-4
          %h4.text-white
            = t('about')
          %ul.list-unstyled

  .navbar.navbar-dark.red-bg.shadow-sm
    %a.navbar-brand.d-flex.align-items-center{:href => "/"}
      %img{src: "images/wikirate-logo.png", height: "50px", width: "auto"}
    .navbar-nav-scroll
      Topic Graph
    .navbar-nav.ml-md-auto
      %button.navbar-toggler{"aria-controls" => "navbarHeader", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarHeader", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-icon